<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
               android:id="@+id/shoe_detect_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="Detection filter parameters"
               android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ScrollView
        android:id="@+id/shoe_detect_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        
	    <LinearLayout
	        android:id="@+id/show_detect_lv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	        
	           
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Positive threshold"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <EditText
	            android:id="@+id/PositiveThresholdText"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:inputType="number"
	            android:paddingBottom="10dp" />
	
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Negative threshold"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <EditText
	            android:id="@+id/NegativeThresholdText"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:inputType="number" />
	
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Jump event window (ms)"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <EditText
	            android:id="@+id/JumpEventWindowText"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:inputType="number" />
	
	        <CheckBox
	            android:id="@+id/VibrateOnStepCheckBox"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Vibrate on step" />

	        <CheckBox
	            android:id="@+id/VibrateOnJumpCheckBox"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Vibrate on jump" />
		    
            <Button
                android:id="@+id/ShoeDetectApplyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply" />
	   </LinearLayout> 
    </ScrollView>
</LinearLayout>
